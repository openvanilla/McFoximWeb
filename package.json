{
  "name": "mcfoximmweb",
  "version": "0.1.0",
  "description": "Taiwan Indigenous Language Input Method TypeScript Version",
  "author": "The McFoxim Authors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/openvanilla/McFoximWeb.git"
  },
  "bugs": {
    "url": "https://github.com/openvanilla/McFoximWeb/issues"
  },
  "homepage": "https://github.com/openvanilla/McFoximWeb#readme",
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  },
  "scripts": {
    "ts-build": "tsc",
    "ts-build:watch": "tsc -w",
    "build:chromeos": "webpack --mode production --config webpack.config.chromeext.js",
    "build:pime": "webpack --mode production --config webpack.config.pime.js",
    "build": "webpack --mode production",
    "build:dev": "webpack --mode development",
    "build:watch": "webpack --mode development --watch",
    "build:all": "npm run build && npm run build:chromeos && npm run build:pime",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "prettier --write \"src/**/*.{ts,js,json}\"",
    "format:check": "prettier --check \"src/**/*.{ts,js,json}\"",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist output coverage"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/chrome": "^0.0.280",
    "@types/jest": "^30.0.0",
    "@types/node": "^22.10.5",
    "@typescript-eslint/eslint-plugin": "^8.19.1",
    "@typescript-eslint/parser": "^8.19.1",
    "eslint": "^9.18.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "jest": "^30.0.0-alpha.7",
    "jest-environment-jsdom": "^30.0.0-alpha.7",
    "jest-junit": "^16.0.0",
    "jsdom": "^25.0.1",
    "prettier": "^3.4.2",
    "ts-jest": "^29.2.5",
    "ts-loader": "^9.5.1",
    "ts-node": "^10.9.2",
    "typedoc": "^0.27.5",
    "typescript": "^5.8.3",
    "webpack": "^5.97.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "minimatch": "^10.0.3"
  },
  "browser": {
    "assert": false
  }
}
